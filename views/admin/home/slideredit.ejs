<%- include('../sidebar.ejs')%>
    <%-include('../header.ejs')%>


        <div class="content mt-3">

            <form method="post" action="/sliderupdate/<%= sedit._id %>" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="">Home location</label>
                    <input type="text" name="location" class="form-control" value="<%= sedit.location %>">
                </div>

                <div class="mb-3">
                    <label for="">Home City</label>
                    <input type="text" name="city" class="form-control" value="<%= sedit.city %>" >
                </div>

                <div class="mb-3">
                    <label for="">Home Address</label>
                    <input type="text" name="address" class="form-control" value="<%= sedit.address %>">
                </div>

                <div class="mb-3">
                    <label for="">Home Price</label>
                    <input type="text" name="price" class="form-control" value="<%= sedit.price %>">
                </div>

                <div class="mb-3">
                    <label for="">Slider Image</label>
                    <input type="file" name="Simage" class="form-control"><br>
                    <img src="<%= sedit.Simage.url %>" alt="img" style="width: 210px">
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>


        <%- include('../footer.ejs') %>