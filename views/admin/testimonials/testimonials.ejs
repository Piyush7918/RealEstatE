<%- include('../sidebar.ejs')%>
    <%-include('../header.ejs')%>


        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <div>
                                    <strong class="card-title">Data Table</strong>
                                </div>
                                <div>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">Add Testimonials</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>client Name</th>
                                            <th>client feedback</th>
                                            <th>Client Image</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% t.forEach((test)=>{ %> 
                                            <!-- uses for show inserted data at front end known as forEach Loop in express-->
                                        <tr>
                                            <td>
                                                <%= test._id %>
                                            </td>
                                            <td>
                                                <%= test.clientname %>
                                            </td>
                                            <td>
                                                <%= test.clientfeedback %>
                                            </td>

                                            <td><img src="<%= test.clientimage.url %>" width="200px"></td>
                                            <td>
                                                <a href="/testview/<%= test._id %>"
                                                    class="btn btn-info">View</a>
                                                <a href="/testedit/<%= test._id %>"
                                                    class="btn btn-info ">Edit</a>
                                                <a href="/testdelete/<%= test._id %>"
                                                    class="btn btn-info">Delete</a>
                                            </td>

                                        </tr>
                                        <% }) %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->


        </div><!-- .content -->
        </div><!-- /#right-panel -->




        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Enter Agents Details</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/inserttestimonials" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label for="">Client Name</label>
                                <input type="text" name="clientname" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Client Feedback  </label>
                                <input type="text" name="clientfeedback" class="form-control">
                            </div>
                            
                            <div class="mb-3">
                                <label for="">Client Image</label>
                                <input type="file" name="clientimage" class="form-control">
                            </div>

                            <div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



        <%- include('../footer.ejs') %>