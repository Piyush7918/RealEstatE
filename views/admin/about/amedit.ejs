<%- include('../sidebar.ejs')%>
    <%-include('../header.ejs')%>


        <div class="content mt-3">

            <form method="post" action="/amupdate/<%= amedit._id %>" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="">Vertical Title</label>
                    <input type="text" name="verticaltitle" class="form-control" value="<%= amedit.verticaltitle %>">
                </div>

                <div class="mb-3">
                    <label for=""> title </label>
                    <input type="text" name="amtitle" class="form-control" value="<%= amedit.amtitle %>">
                </div>

                <div class="mb-3">
                    <label for="">About Description</label>
                    <input type="text" name="amdescription" class="form-control" value="<%= amedit.amdescription %>">
                </div>

                <div class="mb-3">
                    <label for="">Mid Image</label>
                    <input type="file" name="amimage" class="form-control">
                    <img src="<%= amedit.amimage.url %>" alt="amimg" style="width: 210px">
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>


        <%- include('../footer.ejs') %>